{
  "name": "quiet",
  "author": "Stephen McCann",
  "license": "ISC",
  "description": "Menu bar white noise player",
  "repository": "https://github.com/flatsteve/quiet",
  "main": "src/main.js",
  "version": "0.7.0",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "build": {
    "productName": "Quiet",
    "appId": "com.flatsteve.quiet",
    "publish": [
      {
        "provider": "github",
        "owner": "flatsteve",
        "repo": "quiet"
      }
    ],
    "extraResources": "assets/noise.mp3"
  },
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "play-sound": "^1.1.3"
  }
}
